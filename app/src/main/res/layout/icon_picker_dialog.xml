<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_alert_dialog"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Choose Icon"
        android:textSize="@dimen/text_500"
        android:textStyle="bold"
        android:textColor="?attr/textBlack900"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand Logos"
        android:textSize="@dimen/text_300"
        android:textStyle="bold"
        android:textColor="?attr/textBlack500"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/socialIconsRecyclerView"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icons"
        android:textSize="@dimen/text_300"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="?attr/textBlack500"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="vertical"
        android:id="@+id/pickIconRecyclerView"
        android:layout_marginTop="20dp"/>

</LinearLayout>