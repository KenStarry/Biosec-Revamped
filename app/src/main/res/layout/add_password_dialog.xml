<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_remove"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="@integer/material_motion_duration_short_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addPassTitle"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_password_title"
                android:textStyle="bold"
                android:textSize="@dimen/text_500"
                android:textColor="?attr/textBlack500"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_btn"
                    android:id="@+id/lockBtn"
                    android:src="@drawable/ic_lock_open"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/primaryDetailsToggle"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="PrimaryDetails"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_500"
                    android:textColor="?attr/textBlack500" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_up"
                    app:tint="?attr/textBlack300"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/primaryDetailsHolder"
                android:padding="8dp"
                android:orientation="vertical">

                <!--website-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/websiteInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="Twitter,Facebook e.t.c"
                        android:lines="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!--Email Address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/emailInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="someone@example.com"
                        android:lines="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!--Password-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        app:passwordToggleEnabled="true"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:expandedHintEnabled="false"
                        app:boxStrokeWidth="0dp"
                        app:passwordToggleTint="@color/blue"
                        app:boxStrokeWidthFocused="0dp"
                        android:id="@+id/textInputLayoutPassword"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/passwordInput"
                            android:background="@drawable/rounded_edittext"
                            android:textSize="@dimen/text_300"
                            android:textColor="?attr/textBlack500"
                            android:textStyle="bold"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="5dp"
                            android:hint="password"
                            android:inputType="textPassword"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/passCheckerHolder"
                        android:gravity="center_vertical"
                        android:background="@drawable/pill_button"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/passCheckerIcon"
                            android:src="@drawable/ic_weak_pass"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/passCheckerText"
                            android:includeFontPadding="false"
                            android:layout_centerInParent="true"
                            android:text="Weak"
                            android:textSize="@dimen/text_100"
                            android:textStyle="bold"
                            android:textColor="?attr/textBlack500"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Secondary details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/moreDetailsToggle"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="More Details"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_500"
                    android:textColor="?attr/textBlack500" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    app:tint="?attr/textBlack300"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/secondaryDetailsHolder"
                android:padding="8dp"
                android:orientation="vertical">

                <!--URL-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/urlInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textUri"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="https://website.com"
                        android:lines="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!--Username-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/usernameInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="username"
                        android:lines="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!--Phone Number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/phoneInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="phone"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="07*****"
                        android:lines="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!--Security Question-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Question"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        app:tint="?attr/textBlack300"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/securityQuestionInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="question..."
                        android:lines="1"
                        android:layout_marginStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!--Security Answer-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Answer"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        app:tint="?attr/textBlack300"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/securityAnswerInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="answer..."
                        android:lines="1"
                        android:layout_marginStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!--Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:textColor="?attr/textBlack900"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="start"
                        android:id="@+id/descriptionInput"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:textColor="?attr/textBlack500"
                        android:textSize="@dimen/text_300"
                        android:textStyle="bold"
                        android:hint="description"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        app:elevation="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--Pick colors-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick a color"
                    android:textSize="@dimen/text_100"
                    android:textColor="?attr/textBlack900"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:layout_marginEnd="8dp"
                    app:tint="?attr/textBlack100"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/pickedColor"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="@color/medium_pass"
                    app:cardElevation="0dp"/>

            </LinearLayout>

            <!--Pick Icon-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Icon"
                    android:textSize="@dimen/text_100"
                    android:textColor="?attr/textBlack900"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    android:layout_marginEnd="8dp"
                    app:tint="?attr/textBlack100"/>

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/pickedIconHolder"
                    android:background="@drawable/rounded_button_alt"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickedIcon"
                        android:src="@drawable/ic_dashboard"
                        android:layout_marginEnd="8dp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

            <!--Submit Buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/savePassBtn"
                    android:background="@drawable/rounded_button_filled"
                    android:padding="4dp"
                    android:elevation="0dp"
                    android:text="save"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>