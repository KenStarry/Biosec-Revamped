<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".activities.GroupAlphabetActivity">

    <include
        layout="@layout/view_toolbar"
        android:id="@+id/viewAlphabetToolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:layout_below="@id/viewAlphabetToolbar">

        <TextView
            android:id="@+id/viewAlphabetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="?attr/textBlack900"
            android:textSize="32sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewAlphabetRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewAlphabetTitle"
            android:layout_marginTop="24dp"
            android:background="?attr/colorOnPrimary" />

    </RelativeLayout>

</RelativeLayout>